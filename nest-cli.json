{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": ".",
  "compilerOptions": {
    "assets": [
      {
        "include": ".env",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "public/**/*",
        "watchAssets": true,
        "outDir": "dist"
      }
    ],
    "deleteOutDir": true
  }
}
