{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": ".env",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "public/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}
